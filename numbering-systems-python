# Intro to computer science


import sys

print("\n Numbering Systems with Python")

arg_total = len(sys.argv)
print("Total arguments passed:", arg_total)
print("Script name:", sys.argv[0])

if arg_total == 2:
    print("Input argument:", sys.argv[1])
    user_input = sys.argv[1]

    try:
        decimal_val = int(user_input, base=10)

        binary_val = bin(decimal_val)[2:]
        octal_val = oct(decimal_val)[2:]
        hex_val = hex(decimal_val)[2:].upper()

        print("\n Conversions:")
        print(f"Decimal: {decimal_val}")
        print(f"Binary:  {binary_val}")
        print(f"Octal:   {octal_val}")
        print(f"Hex:     {hex_val}")

        print(f"Reversed Binary: {binary_val[::-1]}")

        if decimal_val < 0:
            print("Note: Negative numbers may appear differently in binary/hex form.")

    except ValueError:
        print("\n Error: Please enter a valid integer (example: 42).")

else:
    print("\nUsage:")
    print("   python numbering_systems.py <number>")
    print("Example:")
    print("   python numbering_systems.py 25")

print("\n Program complete")


